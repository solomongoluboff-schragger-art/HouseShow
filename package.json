{
  "name": "houseshow",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspace apps/web",
    "dev": "sh -c \"npm --prefix apps/api run dev & npm --prefix apps/web run dev\"",
    "dev:api": "npm --prefix apps/api run dev",
    "dev:web": "npm --prefix apps/web run dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2"
  },
  "dependencies": {
    "firebase": "11.30.0"
  },
  "engines": {
    "node": "20.x"
  }
}
